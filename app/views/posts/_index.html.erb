<h3>投稿一覧</h3>
<ul class="list-unstyled">
  <% posts.each do |post| %>
    <div class="row">
      <div class="card col-sm-10">
        <h5 class="card-title">
          <%= link_to post.user.name, user_path(post.user) %> : 
          <%= link_to post.title, post_path(post) %>
        </h5>
        <div class="row no-gutters">
          <div class="col-md-8">
            <div class="card-body">
              <div class="card-text">
                <%= post.content %>
              </div>  
            </div>
          </div>
          <div class="col-md-4">
            <div class="card-img">
              <%= post.image %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <%= paginate posts %>
</ul>
