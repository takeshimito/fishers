      <li><%= link_to user_path(current_user) do %><i class="fas fa-user-circle"></i>プロフィール<% end %></li>
      <li><%= link_to logout_path, method: :delete  do%><i class="fas fa-sign-out-alt"></i>ログアウト<% end %></li>
    <% else %>
      <li><%= link_to signup_path do %><i class="fas fa-check-circle"></i>登録</li><% end %>
      <li><%= link_to login_path do %><i class="fas fa-sign-in-alt"></i>ログイン</li><% end %>
    <% end %>
  </ul>
</div>
